---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary"; // "inverted"
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3",
};

const styles = {
  outline:
    "border-2 border-primary-600 hover:bg-neutral-900 text-neutral-900 hover:text-neutral-100",
  primary:
    "bg-primary-600 text-neutral-100 hover:bg-primary-800 border-2 border-transparent",
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-neutral-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
