---
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Low-Cost Remittances",
    description:
      "Bypass TradFi fees, paperwork and limits to remit money home fiat-to-fiat using any payment method.",
    icon: "fluent:money-24-regular",
  },
  {
    title: "Secure Escrow System",
    description:
      "Sequential escrow ensures each step of your transaction is safe and secure, protecting all parties involved. Dispute resolution included.",
    icon: "fluent:checkmark-lock-24-regular",
  },
  {
    title: "Global & Borderless",
    description:
      "Effortlessly connect with payment solutions spanning multiple countries and financial networks, free from TradFi restrictions.",
    icon: "fluent:globe-24-regular",
  },
  {
    title: "Community-Led",
    description:
      "Join a community-governed P2P ecosystem focused on financial inclusion and empowerment. Grow, learn and earn.",
    icon: "fluent:people-community-24-regular",
  },
  {
    title: "Open Source and Transparent",
    description:
      "Benefit from an open-source Web3 smart-contract-based network that prioritizes transparency and accessibility.",
    icon: "fluent:book-open-24-regular",
  },
  {
    title: "KYC-Free Web3 Protocol",
    description:
      "Avoid unnecessary paperwork and complications with our smart-contract-based remittances protocol.",
    icon: "fluent:protocol-handler-24-regular",
  },
];
---

